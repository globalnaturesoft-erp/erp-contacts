<%= form_for([erp_contacts, :backend, tag], html: {class: "form-horizontal"}) do |f| %>
    <div class="form-body">
        <%= erp_text_field name: 'tag[name]',
            value: tag.name,                   
            label: t('contacts.tag.name'),
            help: t('contacts.tag.textfield_required'),
            placeholder: t('contacts.tag.placeholder_enter_name')
        %>
    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn sbold blue"><%= t('contacts.tag.save') %> <i class="fa fa-save"></i></button>
                <%= link_to "<i class=\"fa fa-times\"></i>  #{t('contacts.tag.discard')}".html_safe, erp_contacts.backend_tags_path, class: "btn sbold red" %>
            </div>
        </div>
    </div>
<% end %>
