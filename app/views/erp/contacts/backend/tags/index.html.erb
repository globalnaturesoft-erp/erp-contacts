<% content_for :page_toolbar do %>
<%= erp_component('button/create', {
    text: t('contacts.tag.create'),
    href: erp_contacts.new_backend_tag_path,
    class: 'btn-sm'
}) %>
<% end %>
<% content_for :title do %>
    <%= t('contacts.tags') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-tags"></i> <%= t('contacts.tags') %>
<% end %>

<!-- BEGIN EXAMPLE TABLE PORTLET-->
<%= erp_datalist(
    url: erp_contacts.list_backend_tags_path,
    keywords: [
        {
            text: 'Tag', name: 'name'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-check"></i> Archive',
            url: erp_contacts.archive_all_backend_tags_path,
            data_method: 'PUT'
        },
        {
            text: '<i class="fa fa-exclamation"></i> Unarchive',
            url: erp_contacts.unarchive_all_backend_tags_path,
            data_method: 'PUT'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> Delete',
            url: erp_contacts.delete_all_backend_tags_path,
            data_method: 'DELETE',
            data_confirm: 'Are you sure?'
        }
    ],
    columns: [
        {
            text: 'Name', name: 'name', value: true, checked: true
        },
        {
            text: 'Archive', name: 'archive', value: true, checked: true
        },
        {
            text: 'Creator', name: 'creator', value: true, checked: true
        },
        {
            text: 'Created at', name: 'created_at', value: true, checked: true
        }
    ]
) %>
<!-- END EXAMPLE TABLE PORTLET-->