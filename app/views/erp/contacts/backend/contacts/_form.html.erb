        <%= button_tag "#{t(:submit)} <i class=\"fa fa-save\"></i>".html_safe, class: "btn blue"%>
        <%= link_to '<i class="fa fa-times"></i> Cancel'.html_safe, erp_contacts.backend_contacts_path, class: "btn red" %>
