                        <div class="form-control-focus"> </div>
                        <span class="help-block">Input here....</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group form-md-line-input">
            <div class="row">
                <div class="col-md-6">
                    <label class="col-md-2 control-label" for="form_control_1"></label>
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-xs-4">
                                <input type="text" class="form-control" id="form_control_1" placeholder="City">
                                <div class="form-control-focus"> </div>
                                <span class="help-block">Input here....</span>
                            </div>
                            <div class="col-xs-4">
