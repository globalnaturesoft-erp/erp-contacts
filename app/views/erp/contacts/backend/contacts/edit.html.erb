<% content_for :title do %>
    <%= t('contacts.contacts.edit') %>
<% end %>

<% content_for :page_title do %>    
    <a href=""><i class="fa fa-users"></i> <%= t('contacts.contacts.contacts') %></a> / <%= t('contacts.contacts.edit') %>: <%= @contact.name %>
<% end %>

<% content_for :page_toolbar do %>
        <%= erp_component('button/create', {
        text: t('contacts.contact.create'),
        href: erp_contacts.new_backend_contact_path,
        class: 'btn-sm'
    }) %>
<% end %>
<!-- BEGIN SAMPLE FORM PORTLET-->
<% content_for :title do %>
    <%= t('contacts.contact.edit_contact') %>
<% end %>

<% content_for :page_title do %>    
    <a href=""><i class="fa fa-users"></i> Contacts</a> /
    <%= t('contacts.contact.edit') %>: <%= @contact.name %>
<% end %>

<% content_for :page_toolbar do %>
    <div class="btn-group">
        <div class="clearfix">
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-md-12">
        <% if @contact.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        <h3>
            <span aria-hidden="true" class="icon-user-follow"></span> <%= t('contacts.contacts.contact_details') %>
        </h3>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', contact: @contact %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>