    <div class="col-md-12">
        <% if @contact.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        <h3>
            <span aria-hidden="true" class="icon-user-follow"></span> Edit Contact
        </h3>
        
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <%= render 'form', contact: @contact %>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
