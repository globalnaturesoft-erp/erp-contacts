<table class="table table-advance table-hover table-striped table-checkable order-column" id="">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
                <th>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("email") %>
                <th>
                    <%= t('.email') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th>
                    <%= t('.status') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th>
                    <%= t('.created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('.actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% if @contacts.each do |contact| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: contact.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                <td><%= link_to contact.name, [:backend, contact] %></td>
                <% end %>
                <% if get_columns(params).include?("email") %>
                <td><%= contact.email %></td>
                <% end %>
                <% if get_columns(params).include?("status") %>
                <td>
                    <% if contact.archived == true %>
                    <span class="label label-sm label-danger"><%= t('.archived') %></span>
                    <% else %>
                    <span class="label label-sm label-success"><%= t('.active') %></span>
                    <% end %>
                </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                <td class="center"><%= contact.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td>
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> '+t('.edit'),
                                href: erp_contacts.edit_backend_contact_path(contact)
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end.empty? %>
            <tr>
                <td colspan="6"><%= t('.no_matching_records_found') %></td>
            </tr>
        <% end %>
    </tbody>
</table>
    
<%= erp_datalist_pagination(@contacts) %>
