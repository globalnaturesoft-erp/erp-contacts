<table class="table table-advance table-hover table-striped table-checkable order-column" id="">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
                <th>
                    <%= t('contacts.contacts.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("email") %>
                <th>
                    <%= t('contacts.contacts.email') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("status") %>
                <th>
                    <%= t('contacts.contacts.status') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th>
                    <%= t('contacts.contacts.created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('contacts.contacts.actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% if @contacts.each do |contact| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: contact.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                <td><%= link_to contact.name, erp_contacts.edit_backend_contact_path(contact) %></td>
                <% end %>
                <% if get_columns(params).include?("email") %>
                <td><%= contact.email %></td>
                <% end %>
                <% if get_columns(params).include?("archive") %>
                <td>
                    <% if contact.archived == true %>
                    <span class="label label-sm label-danger"><%= t('contacts.contacts.archived') %></span>
                    <% else %>
                    <span class="label label-sm label-success"><%= t('contacts.contacts.active') %></span>
                    <% end %>
                </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                <td class="center"><%= contact.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td>
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> '+t('contacts.contacts.edit'),
                                href: erp_contacts.edit_backend_contact_path(contact)
                            },
                            {
                                text: '<i class="fa fa-check"></i> '+t('contacts.contacts.archive'), href: 'javascript:;'
                            },
                            {
                                text: '<i class="fa fa-exclamation"></i> '+t('contacts.contacts.unarchive'), href: 'javascript:;'
                            },
                            {
                                divider: true
                            },
                            {
                                text: '<i class="fa fa-trash"></i> '+t('contacts.contacts.delete'),
                                href: erp_contacts.backend_contact_path(contact),
                                data_method: 'DELETE',
                                data_confirm: t('contacts.contacts.delete_confirm'),
                                class: 'ajax-link'
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end.empty? %>
            <tr>
                <td colspan="6"><%= t('contacts.contacts.no_matching_records_found') %></td>
            </tr>
        <% end %>
    </tbody>
</table>
    
<%= erp_datalist_pagination(@contacts) %>
