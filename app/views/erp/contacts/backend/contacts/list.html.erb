<table class="table table-advance table-hover table-striped table-checkable order-column" id="">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
            <th><%= t(:name) %></th>
            <% end %>
            <% if get_columns(params).include?("email") %>
            <th><%= t(:email) %></th>
            <% end %>
            <% if get_columns(params).include?("archive") %>
            <th><%= t(:archive) %></th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
            <th><%= t(:created_at) %></th>
            <% end %>
            <th width="1%"><%= t(:actions) %></th>
        </tr>
    </thead>
    <tbody>
        <% if @contacts.each do |contact| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: contact.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                <td><%= link_to contact.name, erp_contacts.edit_backend_contact_path(contact) %></td>
                <% end %>
                <% if get_columns(params).include?("email") %>
                <td><%= contact.email %></td>
                <% end %>
                <% if get_columns(params).include?("archive") %>
                <td>
                    <span class="label label-sm label-success">Archived</span>
                </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                <td class="center"><%= contact.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                <td>
                    <%= erp_datalist_row_actions(
                        [
                            {
                                text: '<i class="fa fa-edit"></i> Edit',
                                href: erp_contacts.edit_backend_contact_path(contact)
                            },
                            {
                                text: '<i class="fa fa-check"></i> Archive', href: 'javascript:;'
                            },
                            {
                                text: '<i class="fa fa-exclamation"></i> Unarchive', href: 'javascript:;'
                            },
                            {
                                divider: true
                            },
                            {
                                text: '<i class="fa fa-trash"></i> Delete',
                                href: erp_contacts.backend_contact_path(contact),
                                data_method: 'DELETE',
                                data_confirm: 'Are you sure?',
                                class: 'ajax-link'
                            }
                        ]
                    ) %>
                </td>
            </tr>
        <% end.empty? %>
            <tr>
                <td colspan="6">No matching records found</td>
            </tr>
        <% end %>
    </tbody>
</table>
    
<%= erp_datalist_pagination(@contacts) %>
