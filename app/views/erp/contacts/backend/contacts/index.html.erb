<% content_for :title do %>
    <%= t('contacts.contacts') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-users"></i> <%= t('contacts.contacts') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('contacts.contact.create'),
        href: erp_contacts.new_backend_contact_path,
        class: 'btn-sm'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_contacts.list_backend_contacts_path,
    keywords: [
        {
            text: 'contacts.contact.name', name: 'name'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-check"></i> Archive', url: 'aaa'
        },
        {
            text: '<i class="fa fa-exclamation"></i> Unarchive', url: 'javascript:;'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> Delete',
            url: erp_contacts.delete_all_backend_contacts_path,
            data_method: 'DELETE',
            data_confirm: 'Are you sure?'
        }
    ],
    filters: [
        {
            text: 'Persons', name: 'contact_type', value: Erp::Contacts::Contact::TYPE_PERSON, checked: false
        },
        {
            text: 'Companies', name: 'contact_type', value: Erp::Contacts::Contact::TYPE_COMPANY, checked: false
        }
    ],
    columns: [
        {
            text: 'Name', name: 'name', value: true, checked: true
        },
        {
            text: 'Email', name: 'email', value: true, checked: true
        },
        {
            text: 'Archive', name: 'archive', value: true, checked: true
        },
        {
            text: 'Created At', name: 'created_at', value: true, checked: true
        }
    ]    
) %>    