<% content_for :title do %>
    Contacts
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-users"></i> Contacts
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('contacts.contact.create'),
        href: erp_contacts.new_backend_contact_path,
        class: 'btn-sm'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_contacts.list_backend_contacts_path,
    keywords: [
        {
            text: 'Name', name: 'name'
        },
        {
            text: 'Abbreviation', name: 'abbreviation'
        },
        {
            text: 'User', name: 'user'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-check"></i> Archive', url: 'aaa'
        },
        {
            text: '<i class="fa fa-exclamation"></i> Unarchive', url: 'javascript:;'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> Delete',
            url: erp_contacts.delete_all_backend_contacts_path,
            data_method: 'DELETE',
            data_confirm: 'Are you sure?'
        }
    ],
    filters: [
        {
            text: 'Persons', name: 'contact_type', value: "person", checked: false
        },
        {
            text: 'Companies', name: 'contact_type', value: "company", checked: false
        }
    ],
    columns: [
        {
            text: 'Name', name: 'name', value: true, checked: true
        },
        {
            text: 'Abbreviation', name: 'abbreviation', value: true, checked: true
        },
        {
            text: 'Created at', name: 'created_at', value: true, checked: true
        },
        {
            text: 'Updated at', name: 'updated_at', value: true, checked: true
        },
        {
            text: 'Creator', name: 'creator', value: true, checked: true
        }
    ]    
) %>    