<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet light bordered">
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row">
                <div class="col-md-6">
                    <div class="btn-group">
                        <%= link_to '<i class="fa fa-plus"></i> New Contact'.html_safe, erp_contacts.new_backend_contact_path, class: "btn sbold green" %>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="btn-group pull-right">
                        <button class="btn green btn-outline dropdown-toggle" data-toggle="dropdown">
                          Tools <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:;"><i class="fa fa-print"></i> Print</a></li>
                            <li><a href="javascript:;"><i class="fa fa-file-pdf-o"></i> Save as PDF</a></li>
                            <li><a href="javascript:;"><i class="fa fa-file-excel-o"></i> Export to Excel</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover table-checkable order-column">
            <thead>
                <tr>
                    <th><%= t(:image) %></th>
                    <th><%= t(:code) %></th>
                    <th><%= t(:name) %></th>
                    <th><%= t(:phone) %></th>
                    <th><%= t(:created_at) %></th>
                    <th><%= t(:actions) %></th>
                </tr>
            </thead>
            <tbody>
                <% (0..5).each do |contact| %>
                <tr class="odd gradeX">
                    <td class="fit">
                      <%= link_to image_tag("/backend/assets/pages/media/users/avatar4.jpg", class: "user-pic", alt: "Nguyễn Ngọc Sơn") %>
                    </td>
                    <td><%= link_to "KH000001", "" %></td>
                    <td><%= "Nguyễn Ngọc Sơn" %></td>
                    <td><%= "01644046123" %></td>
                    <td class="center"><%= "08/11/1994" %></td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false"> Actions
                                <i class="fa fa-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu pull-left" role="menu">
                                <li><%= link_to '<i class="fa fa-edit"></i> Edit'.html_safe, "" %></li>
                                <li><%= link_to '<i class="fa fa-check"></i> Archived'.html_safe, "" %></li>
                                <li><%= link_to '<i class="fa fa-exclamation"></i> Unarchive'.html_safe, "" %></li>
                                <li><%= link_to '<i class="fa fa-copy"></i> Duplicate'.html_safe, "" %></li>
                                <li class="divider"></li>
                                <li><%= link_to '<i class="fa fa-close"></i> Delete'.html_safe, "" %></li>
                            </ul>
                        </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-5 col-sm-5">
                <div><%= page_entries_info @contacts %></div>
            </div>
            <div class="col-md-7 col-sm-7">
                <div class="pagination-style">
                    <%= will_paginate @contacts, previous_label: '<i class="fa fa-angle-left"></i>'.html_safe, next_label: '<i class="fa fa-angle-right"></i>'.html_safe, renderer: BootstrapPagination::Rails %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->