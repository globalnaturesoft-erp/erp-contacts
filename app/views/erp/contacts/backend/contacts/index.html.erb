<% content_for :title do %>
    <%= t('contacts.contacts.contacts') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-users"></i> <%= t('contacts.contacts.contacts') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('contacts.contacts.create'),
        href: erp_contacts.new_backend_contact_path,
        class: 'btn-sm'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_contacts.list_backend_contacts_path,
    keywords: [
        {
            text: t('contacts.contacts.name'), name: 'name'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-check"></i> '+t('contacts.contacts.archive'), url: 'javascript:;'
        },
        {
            text: '<i class="fa fa-exclamation"></i> '+t('contacts.contacts.unarchive'), url: 'javascript:;'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('contacts.contacts.delete'),
            url: erp_contacts.delete_all_backend_contacts_path,
            data_method: 'DELETE',
            data_confirm: t('contacts.contacts.delete_confirm')
        }
    ],
    filters: [
        {
            text: t('contacts.contacts.persons'), name: 'contact_type', value: Erp::Contacts::Contact::TYPE_PERSON, checked: false
        },
        {
            text: t('contacts.contacts.companies'), name: 'contact_type', value: Erp::Contacts::Contact::TYPE_COMPANY, checked: false
        }
    ],
    columns: [
        {
            text: t('contacts.contacts.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('contacts.contacts.email'), name: 'email', value: true, checked: true
        },
        {
            text: t('contacts.contacts.status'), name: 'status', value: true, checked: true
        },
        {
            text: t('contacts.contacts.created_at'), name: 'created_at', value: true, checked: true
        }
    ]    
) %>    