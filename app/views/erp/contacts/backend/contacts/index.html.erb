<% content_for :title do %>
    <%= t('.contacts') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-users"></i> <%= t('.contacts') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_contacts.new_backend_contact_path,
        class: 'btn-sm'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_contacts.list_backend_contacts_path,
    keywords: [
        {
            text: t('.name'), name: 'name'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-check"></i> '+t('.archive'), url: 'javascript:;'
        },
        {
            text: '<i class="fa fa-exclamation"></i> '+t('.unarchive'), url: 'javascript:;'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_contacts.delete_all_backend_contacts_path,
            data_method: 'DELETE',
            data_confirm: t('.delete_confirm')
        }
    ],
    filters: [
        {
            text: t('.persons'), name: 'contact_type', value: Erp::Contacts::Contact::TYPE_PERSON, checked: false
        },
        {
            text: t('.companies'), name: 'contact_type', value: Erp::Contacts::Contact::TYPE_COMPANY, checked: false
        }
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.email'), name: 'email', value: true, checked: true
        },
        {
            text: t('.status'), name: 'status', value: true, checked: true
        },
        {
            text: t('.created_at'), name: 'created_at', value: true, checked: true
        }
    ],
    sort: { sort_by: 'erp_contacts_contacts.name', sort_direction: 'desc' }
) %>    