<% content_for :page_toolbar do %>
    <div class="btn-group">
        <%= link_to '<i class="fa fa-plus"></i> Create title'.html_safe, erp_contacts.new_backend_title_path, class: "btn btn-sm sbold btn-primary" %>
    </div>
<% end %>

<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-green-haze">
            <%= erp_list_actions_button(
                [
                    {
                        text: '<i class="fa fa-check"></i> Archive', url: 'javascript:;'
                    },
                    {
                        text: '<i class="fa fa-exclamation"></i> Unarchive', url: 'javascript:;'
                    },
                    {
                        divider: true
                    },
                    {
                        text: '<i class="fa fa-trash"></i> Delete', url: 'javascript:;'
                    }
                ]
            ) %>
            <%= erp_filters_button(
                [
                    {
                        text: 'Persons', url: 'javascript:;'
                    },
                    {
                        text: 'Companies', url: 'javascript:;', checked: true
                    },
                    {
                        divider: true
                    },
                    {
                        text: 'Customers', url: 'javascript:;'
                    },
                    {
                        text: 'Vendors', url: 'javascript:;'
                    },
                    {
                        divider: true
                    },
                    {
                        text: 'Archived', url: 'javascript:;'
                    }
                ]
            ) %>            
            <%= erp_columns_button(
                [
                    {
                        text: 'Name', url: 'javascript:;', checked: true
                    },
                    {
                        text: 'Abbreviation', url: 'javascript:;', checked: true
                    },
                    {
                        text: 'Created at', url: 'javascript:;', checked: true
                    },
                    {
                        text: 'Updated at', url: 'javascript:;'
                    },
                    {
                        text: 'Creator', url: 'javascript:;'
                    }
                ]
            ) %>
        </div>
        <div class="actions">
            <a class="btn btn-circle btn-icon-only btn-default fullscreen pl-10" href="javascript:;" data-original-title="" title=""> </a>            
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-hover table-striped table-checkable order-column" id="">
            <thead>
                <tr>
                    <th>
                        <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                            <input type="checkbox" class="group-checkable"/>
                            <span></span>
                        </label>
                    </th>
                    <th><%= t(:title) %></th>
                    <th><%= t(:abbreviation) %></th>
                    <th><%= t(:archive) %></th>
                    <th><%= t(:created_at) %></th>
                    <th width="1%"><%= t(:actions) %></th>
                </tr>
            </thead>
            <tbody>
                <% @titles.each do |title| %>
                <tr class="odd gradeX">
                    <td width='1%'>
                        <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                            <input type="checkbox" class="checkboxes" value="1" />
                            <span></span>
                        </label>
                    </td>
                    <td><%= link_to title.title, erp_contacts.edit_backend_title_path(title) %></td>
                    <td><%= title.abbreviation %></td>
                    <td>
                        <span class="label label-sm label-success">Archived</span>
                    </td>
                    <td class="center"><%= title.created_at.strftime("%d/%m/%Y") %></td>
                    <td>
                        <%= erp_row_actions_button(
                            [
                                {
                                    text: '<i class="fa fa-check"></i> Archive', url: 'javascript:;'
                                },
                                {
                                    text: '<i class="fa fa-exclamation"></i> Unarchive', url: 'javascript:;'
                                },
                                {
                                    divider: true
                                },
                                {
                                    text: '<i class="fa fa-trash"></i> Delete', url: 'javascript:;'
                                }
                            ]
                        ) %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-5 col-sm-5">
                <div><%= page_entries_info @titles %></div>
            </div>
            <div class="col-md-7 col-sm-7">
                <div class="pagination-style">
                    <%= will_paginate @slides, previous_label: '<i class="fa fa-angle-left"></i>'.html_safe, next_label: '<i class="fa fa-angle-right"></i>'.html_safe, renderer: BootstrapPagination::Rails %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->