<% content_for :title do %>
    <%= t('contacts.titles') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-bookmark-o"></i> <%= t('contacts.titles') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('contacts.title.create'),
        href: erp_contacts.new_backend_title_path,
        class: 'btn-sm'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_contacts.list_backend_titles_path,
    keywords: [
        {
            text: 'Title', name: 'title'
        },
        {
            text: 'Abbreviation', name: 'abbreviation'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-check"></i> Archive',
            url: erp_contacts.archive_all_backend_titles_path,
            data_method: 'PUT'
        },
        {
            text: '<i class="fa fa-exclamation"></i> Unarchive',
            url: erp_contacts.unarchive_all_backend_titles_path,
            data_method: 'PUT'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> Delete',
            url: erp_contacts.delete_all_backend_titles_path,
            data_method: 'DELETE',
            data_confirm: 'Are you sure?'
        }
    ],
    columns: [
        {
            text: 'Title', name: 'title', value: true, checked: true
        },
        {
            text: 'Abbreviation', name: 'abbreviation', value: true, checked: true
        },
        {
            text: 'Archive', name: 'archive', value: true, checked: true
        },
        {
            text: 'Creator', name: 'creator', value: true, checked: true
        },
        {
            text: 'Created at', name: 'created_at', value: true, checked: true
        }
    ]
) %>    