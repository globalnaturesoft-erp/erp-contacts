<% content_for :title do %>
    <%= t('contacts.titles.create') %>
<% end %>

<% content_for :page_title do %>    
    <a href=""><i class="fa fa-bookmark-o"></i> <%= t('contacts.titles.titles') %></a> / <%= t('contacts.titles.create') %>
<% end %>

<div class="row">
    <div class="col-md-6">
        <% if @title.errors.any? %>
            <%= erp_form_control("form_error_message") %>
        <% end %>
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-body">
                <%= render 'form', title: @title %>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>